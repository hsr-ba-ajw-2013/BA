<form class="task-create-form large-12 columns" action="{{action}}" method="post">
	<div class="row">
		<div class="large-12 columns">
			<h2 class="">{{title}}</h2>
		</div>
	</div>

	<div class="row">
		<div class="small-3 large-2 columns">
			<label for="name" class="inline">{{trans "Task"}}</label>
		</div>
		<div class="small-9 large-7 columns">
			<input type="text" name="name" id="name" placeholder="{{trans "to go shopping"}}"{{#if task}} value="{{task.name}}"{{/if}} />
		</div>
		<div class="large-3 columns hide-for-small hint">
			{{trans "Give a brief description of the task."}}
		</div>
	</div>

	<div class="row">
		<div class="small-3 large-2 columns">
			<label for="reward" class="inline">{{trans "Reward"}}</label>
		</div>
		<div class="small-9 large-7 columns">
			<input type="number" name="reward" id="reward" placeholder="{{trans "1 to 5 points"}}" min="1" max="5"{{#if task}} value="{{task.reward}}"{{/if}} />
		</div>
		<div class="large-3 columns hide-for-small hint">
			{{#blocktrans}}
				How many <i class="icon-trophy"></i> points should the roommate receive, who completed the task?
			{{/blocktrans}}
		</div>
	</div>

	<div class="row">
		<div class="small-3 large-2 columns">
			<label for="dueDate" class="inline">{{trans "Due date"}}</label>
		</div>
		<div class="small-9 large-7 columns">
			<input type="date" name="dueDate" id="dueDate" placeholder="{{trans "2/22/2014"}}"{{#if task}} value="{{dateFormat task.dueDate}}"{{/if}} />
		</div>
		<div class="large-3 columns hide-for-small hint">
			{{trans "Is this task due on a specific day?"}}
		</div>
	</div>

	<div class="row">
		<div class="small-3 large-2 columns">
			<label for="description" class="inline">{{trans "Note"}}</label>
		</div>
		<div class="small-9 large-7 columns">
			<textarea name="description" id="description" placeholder="{{trans "Don't forget the steaks!"}}">{{#if task}}{{task.description}}{{/if}}</textarea>
		</div>
		<div class="large-3 columns hide-for-small hint">
			{{trans "Leave a note for this task, if necessary."}}
		</div>
	</div>

	<div class="row button-bar">
		<div class="small-12 large-offset-2 large-9 columns relative">
			<input type="submit" value="{{trans "Save task"}}" class="button success widen-for-small" />
			<img src="/images/loader.gif" alt="{{trans "Loading"}}" class="loader"/>
		</div>
	</div>
</form>