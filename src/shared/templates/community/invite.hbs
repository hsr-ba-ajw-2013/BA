<div class="row">
	<header class="large-12 columns">
		<h2>{{trans "Invite"}}</h2>
	</header>
</div>
<div class="row">
	<div class="large-6 large-centered columns text-center">
		<div class="row">
			<div class="columns">
				<h5 class="subheader">
					{{#blocktrans}}Share following URL with your roommates to organize your life in communes with roomies.{{/blocktrans}}
				</h5>
			</div>
		</div>
		<div class="row">
			<div class="columns">
				<aside class="panel">
					<p>
						<input type="text" value="{{url shareLink config}}" readonly="readonly" class="copyable" />
					</p>
					<iframe src="//www.facebook.com/plugins/like.php?href={{url shareLink config true}}&amp;send=false&amp;layout=button_count&amp;width=450&amp;show_faces=false&amp;font&amp;colorscheme=light&amp;action=recommend&amp;height=21&amp;appId=496325690405368" scrolling="no" frameborder="0" style="border:none; overflow:hidden; width:120px; height:20px;" allowTransparency="true"></iframe>
					<a href="https://twitter.com/share" class="twitter-share-button" data-url="{{url shareLink config}}" data-text="{{trans "Join my Community!"}}">{{trans "Tweet"}}</a>
				</aside>
			</div>
		</div>
	</div>
</div>
