<div class="row">
	<div class="large-12 columns">
		<table class="community">
			<thead>
				<tr>
					<th class="community">{{trans "Community"}}</th>
				</tr>
			</thead>
			<tbody>
				<tr>
					<td class="community">{{trans "You're in the community named: %s" community.name}}</td>
				</tr>
				<tr class="danger">
					<td class="community">
						<form action="/community" method="POST">
							{{#blocktrans}}<b>DANGER ZONE: </b>Delete the community{{/blocktrans}}
							<input type="submit" value="{{trans "Delete the community"}}" class="button button-danger large-2 columns right">
							<input type="hidden" name="_method" value="DELETE" />
							<input type="hidden" name="community" value="{{community.slug}}" />
						</form>
					</td>
				</tr>
			</tbody>
		</table>
	</div>
</div>